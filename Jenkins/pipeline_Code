pipeline {
    agent any

    stages {
        stage('ğŸ§¹ Clean Workspace') {
            steps {
                echo "ğŸ“¥ Removing old build and dependencies..."
                sh 'sudo rm -rf react_project/build react_project/node_modules'
            }
        }

        stage('ğŸ“¥ Clone Repository') {
            steps {
                echo "ğŸ“‚ Cloning the master branch from GitHub..."
                git branch: 'master', url: 'https://github.com/nafiurrashid/react_project.git'
            }
        }

        stage('ğŸ“‚ List Project Files') {
            steps {
                echo "ğŸ—‚ Checking files in react_project directory..."
                sh 'ls -lah'
                sh 'pwd'
            }
        }

        stage('âš™ï¸ Install & Build Project') {
            steps {
                echo "ğŸ’» Installing dependencies and building the project..."
                sh 'npm install'
                sh 'npm run build'
                sh 'ls -lia'
            }
        }

        stage('ğŸ“¦ Deploy Build to Nginx') {
            steps {
                echo "ğŸ§¹ Cleaning /var/www/html and moving new build files..."
                sh '''
                    sudo rm -rf /var/www/html/*
                    sudo mv build/* /var/www/html
                    ls -lah /var/www/html/
                '''
            }
        }

        stage('ğŸ”„ Reload & Restart Nginx') {
            steps {
                echo "â™»ï¸ Reloading and restarting Nginx server..."
                sh '''
                    sudo systemctl reload nginx
                    sudo systemctl restart nginx
                '''
            }
        }
    }
}
