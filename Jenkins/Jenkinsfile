pipeline {
    agent any

    stages {
        stage('🧹 Clean Workspace') {
            steps {
                echo "📥 Removing old build and dependencies..."
                sh 'sudo rm -rf react_project/build react_project/node_modules'
            }
        }

        stage('📥 Clone Repository') {
            steps {
                echo "📂 Cloning the master branch from GitHub..."
                git branch: 'master', url: 'https://github.com/nafiurrashid/react_project.git'
            }
        }

        stage('📂 List Project Files') {
            steps {
                echo "🗂 Checking files in react_project directory..."
                sh 'ls -lah'
                sh 'pwd'
            }
        }

        stage('⚙️ Install & Build Project') {
            steps {
                echo "💻 Installing dependencies and building the project..."
                sh 'npm install'
                sh 'npm run build'
                sh 'ls -lia'
            }
        }

        stage('📦 Deploy Build to Nginx') {
            steps {
                echo "🧹 Cleaning /var/www/html and moving new build files..."
                sh '''
                    sudo rm -rf /var/www/html/*
                    sudo mv build/* /var/www/html
                    ls -lah /var/www/html/
                '''
            }
        }

        stage('🔄 Reload & Restart Nginx') {
            steps {
                echo "♻️ Reloading and restarting Nginx server..."
                sh '''
                    sudo systemctl reload nginx
                    sudo systemctl restart nginx
                '''
            }
        }
    }
}
